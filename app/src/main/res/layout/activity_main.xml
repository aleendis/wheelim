<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

 <!--  <fragment
        android:id="@+id/GPS_View"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/gps_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
-->
    <TextView
        android:id="@+id/gps_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="위도: \n경도: "
        android:textSize="38sp"
        app:layout_constraintBottom_toTopOf="@+id/Warning"/>
        <!--app:layout_constraintTop_toBottomOf="@+id/GPS_View" />-->

    <TextView
        android:id="@+id/Warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="낙상사고 발생!"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gps_location" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/call"
        android:layout_marginTop="20dp"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:text="긴급전화"
        app:layout_constraintEnd_toStartOf="@+id/gps_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Warning" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gps_send"
        android:layout_marginTop="20dp"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:text="좌표전송"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/call"
        app:layout_constraintTop_toBottomOf="@+id/Warning" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mute"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:text="알람끄기"
        app:layout_constraintEnd_toStartOf="@+id/gps_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm"
        android:layout_width="130sp"
        android:layout_height="65sp"
        android:text="기기등록"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/call"
        app:layout_constraintTop_toBottomOf="@+id/gps_send" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout"
        android:layout_width="130sp"
        android:layout_height="65sp"
        android:text="로그아웃"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/call"
        app:layout_constraintTop_toBottomOf="@+id/confirm" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
